<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        	http://code.alibabatech.com/schema/dubbo        
        	http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        	http://www.springframework.org/schema/context 
        	http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!-- 具体的实现bean -->
	<!-- <bean id="testUserService" class="com.sps.service.impl.UserService" /> -->
	<!--提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="sps-service-impl" />
	<!-- 声明注册中心 -->
	<dubbo:registry address="${zookeeper.address}" />
	<!-- 声明协议 -->
	<dubbo:protocol name="dubbo" port="${dubbo.port}" />
	<!-- 暴露服务 -->
	<!-- <dubbo:service interface="com.sps.service.IUserService" ref="testUserService" /> -->
	    <!-- 使用注解方式暴露接口 -->     
    <dubbo:annotation package="com.sps.serviceImpl" />
</beans>
 
 
 